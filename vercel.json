{
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm run build",
  "outputDirectory": "apps/web/.output/public",
  "github": {
    "silent": true
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "src": "/_nuxt/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(api|_nuxt)/.*",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "200.html"
    }
  ]
} 